<div class="content">
  <h1>
    Chloe Murdoch
  </h1>

  <div id="quotes">
  <% Quote.all.order("created_at DESC").each do |quote| %>
    <div class="quote">
      <p>
      <%= Sanitize.fragment(quote.body) %>
      </p>
      <cite>
      <%= quote.source  || "Anon" %>
      </cite>
    </div>
    <% end %>
  </div>

  <div id="pictures">
    <img src= "https://s-media-cache-ak0.pinimg.com/originals/54/99/42/5499428faba9900090d5e829a62ff8f6.jpg">
    <img src= "https://placekitten.com/g/400/300">
    <img src= "https://placekitten.com/g/400/300" alt="my pet cat">
  </div>

  <!-- The Modal -->
  <div id="myModal" class="modal">

  <!-- The Close Button -->
  <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>

  <!-- Modal Content (The Image) -->
  <img class="modal-content" id="img01">

  <!-- Modal Caption (Image Text) -->
  <div id="caption"></div>
  </div>
</div>
